<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingLeft="20dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/history_image"
        android:layout_width="65dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/history_default"
        android:adjustViewBounds="true" />


        <TextView
            android:id="@+id/history_companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:layout_toRightOf="@+id/history_image"
            android:textAlignment="textStart"
            android:text="사용자"
            android:gravity="start"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/history_chatmessage"
            android:layout_below="@+id/history_companyName"
            android:layout_toRightOf="@+id/history_image"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:textColor="#88777777"
            android:maxLines="2"
            android:textAlignment="textStart"
            android:gravity="start"
            android:text="최근 메시지 최근 메시지최근 메시지최근 메시지최근 메시지 메시지메시지"
            android:textSize="13sp" />


    <TextView
        android:id="@+id/message_time"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textSize="10sp"
        android:text="30초 전"
        android:textColor="#88777777"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/select_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/message_time"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="전문사주"
        android:textColor="#88777777"
        android:layout_marginTop="20dp"
        android:gravity="center"
        />



    <TextView
        android:id="@+id/history_notread"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="4"
        android:background="@drawable/message_counter"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        />


</RelativeLayout>